{
  "name": "@betmate-ap/contracts",
  "version": "0.1.1",
  "private": false,
  "description": "GraphQL schema and generated TypeScript types for BetMate",
  "type": "module",
  "main": "generated/schema-types.ts",
  "types": "generated/schema-types.ts",
  "files": [
    "generated",
    "src/schema"
  ],
  "scripts": {
    "codegen": "graphql-codegen --config codegen.ts",
    "build": "npm run codegen && tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,json,md,mdx,yml,yaml,graphql}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "graphql",
    "schema",
    "types",
    "betmate"
  ],
  "author": "betmate-ap",
  "license": "MIT",
  "dependencies": {
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
